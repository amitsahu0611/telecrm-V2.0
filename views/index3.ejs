    <title>Nowgray Invoice</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
        color: #333;
      }
      .container {
        max-width: 800px;
        margin: 0 auto;
        border: 1px solid #eee;
        padding: 20px;
      }
      .header-line {
        height: 5px;
        background-color: #1e3a8a;
        margin-bottom: 20px;
      }
      .header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
      }
      .company-info {
        flex: 2;
      }
      .logo-container {
        flex: 1;
        display: flex;
        justify-content: flex-end;
        align-items: flex-start;
      }
      .logo-placeholder {
        width: 80px;
        height: 80px;
        background-color: #f0f0f0;
        display: flex;
        justify-content: center;
        align-items: center;
        font-weight: bold;
        color: #8bc34a;
        font-size: 24px;
      }
      .company-name {
        color: #8bc34a;
        font-size: 22px;
        font-weight: bold;
        margin-bottom: 5px;
      }
      .company-address {
        font-size: 12px;
        color: #666;
        margin-bottom: 5px;
      }
      .gst-info {
        font-size: 12px;
        color: #666;
        margin-top: 10px;
      }
      .invoice-title {
        color: #8bc34a;
        font-size: 28px;
        font-weight: bold;
        margin: 30px 0 15px 0;
      }
      .invoice-details {
        display: flex;
        justify-content: space-between;
        margin-bottom: 30px;
      }
      .invoice-section {
        flex: 1;
      }
      .invoice-section-title {
        font-weight: bold;
        font-size: 14px;
        margin-bottom: 5px;
      }
      .invoice-section-content {
        font-size: 14px;
        color: #666;
      }
      .invoice-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 30px;
      }
      .invoice-table th {
        background-color: #f9f9f9;
        text-align: left;
        padding: 10px;
        font-size: 14px;
      }
      .invoice-table th.price-column {
        text-align: right;
      }
      .invoice-table td {
        padding: 10px;
        border-bottom: 1px solid #eee;
        font-size: 14px;
      }
      .invoice-table td.price-column {
        text-align: right;
      }
      .description-column {
        width: 40%;
      }
      .pages-column {
        width: 20%;
      }
      .price-column {
        width: 20%;
      }
      .total-column {
        width: 20%;
      }
      .description-header {
        color: #8bc34a;
      }
      .pages-header {
        color: #8bc34a;
      }
      .price-header {
        color: #8bc34a;
      }
      .total-header {
        color: #8bc34a;
      }
      .notes-section {
        display: flex;
        margin-bottom: 20px;
      }
      .notes-title {
        width: 80px;
        font-size: 14px;
        color: #666;
      }
      .notes-content {
        flex: 1;
        font-size: 12px;
        color: #999;
      }
      .terms-section {
        display: flex;
        margin-bottom: 30px;
      }
      .terms-title {
        width: 80px;
        font-size: 14px;
        color: #666;
      }
      .terms-content {
        flex: 1;
        font-size: 12px;
        color: #999;
      }
      .totals-section {
        display: flex;
        justify-content: flex-end;
      }
      .totals-table {
        width: 300px;
      }
      .totals-row {
        display: flex;
        justify-content: space-between;
        padding: 5px 0;
      }
      .totals-label {
        font-size: 14px;
        color: #8bc34a;
      }
      .totals-value {
        font-size: 14px;
        text-align: right;
      }
      .final-total {
        border: 1px solid #8bc34a;
        padding: 10px;
        margin-top: 10px;
        display: flex;
        justify-content: space-between;
      }
      .final-total-label {
        font-size: 18px;
        color: #8bc34a;
        font-weight: bold;
      }
      .final-total-value {
        font-size: 18px;
        font-weight: bold;
      }
